{
  "compilerOptions": {
    "allowJs": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "traceResolution": false,
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": ["**/src", "**/test"],
  "exclude": ["**/node_modules", "**/build"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
